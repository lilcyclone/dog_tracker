<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Feedings

    <a data-toggle="collapse" href="#dog_feedings_new_form">
      Add feeding
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @dog.feedings.each do |feeding| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to feeding, feeding %>

        <%= link_to feeding, method: :delete, data: { confirm: "Do you really want to delete this feeding" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="dog_feedings_new_form">
        <%= render partial: "dogs/dog_feedings_new_form" %>
      </div>
    </div>

  </ul>
</div>
