<div class="card mb-3">
  <h2 class="card-header h4">
    Feeding #<%= feeding.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Dog</dt>
      <dd>
        <% if @feeding.dog.present? %>
          <%= link_to feeding.dog, feeding.dog %>
        <% end %>
      </dd>

      <dt>Amount</dt>
      <dd><%= feeding.amount %></dd>

      <dt>Food name</dt>
      <dd><%= feeding.food_name %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back feeding, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_feeding_url(feeding), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to feeding, method: :delete, data: { confirm: "Do you really want to delete this feeding?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(feeding.updated_at) %> ago
  </div>
</div>
