<div class="card mb-3">
  <h2 class="card-header h4">
    Ownership #<%= ownership.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>User</dt>
      <dd>
        <% if @ownership.user.present? %>
          <%= link_to ownership.user, ownership.user %>
        <% end %>
      </dd>

      <dt>Dog</dt>
      <dd>
        <% if @ownership.dog.present? %>
          <%= link_to ownership.dog, ownership.dog %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back ownership, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <% if current_user == @ownership.user %>
          <%= link_to edit_ownership_url(ownership), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @ownership.user %>
          <%= link_to ownership, method: :delete, data: { confirm: "Do you really want to delete this ownership?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(ownership.updated_at) %> ago
  </div>
</div>
