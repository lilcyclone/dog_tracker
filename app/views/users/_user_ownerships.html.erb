<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Ownerships

    <a data-toggle="collapse" href="#user_ownerships_new_form">
      Add ownership
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.ownerships.each do |ownership| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to ownership, ownership %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_ownerships_new_form">
        <%= render partial: "users/user_ownerships_new_form" %>
      </div>
    </div>

  </ul>
</div>
